<style>
    .re-records-content {
        width: 100%;
        height: calc(100vh - 155px);
        display: flex;
        justify-content: center;
    }

    .re-records-content h2 {
        font-weight: 600;
        margin-bottom: 3px;
    }

    .re-records-content-form {
        width: 75%;
        margin: 0 auto;
    }

    .re-records-content-form input[type="text"] {
        border-radius: 5px;
        outline: none !important;
    }

    .re-records-content-form input[type="password"] {
        border-radius: 5px;
        outline: none !important;
    }

    .re-records-content-form input[type="date"] {
        border-radius: 5px;
        outline: none !important;
    }

    .re-records-content-form input[type="number"] {
        border-radius: 5px;
        outline: none !important;
    }

    .re-records-content-form ::placeholder {
        font-size: 18px;
    }

    .re-records-content-form button {
        background-color: var(--color-dark);
        border-radius: 5px;
        color: var(--color-white);
    }

    .re-records-content-form button:hover {
        background-color: var(--color-dark);
        color: var(--color-white);
    }
    .re-btn {
        background-color: var(--color-dark);
        color: var(--color-white);
        border-radius: 0px;
    }
    .re-btn:hover {
        background-color: var(--color-tomato);
        border: 0px;
        color: var(--color-white);
        transition: 0.8s;
    }
    .re-alert {
        background-color: var(--color-dark);
        color: var(--color-white);
        border-radius: 0px;
    }
    .btn-close {
        background-image: url('http://localhost:5000/icon/icon-close.svg');
        opacity: 1;
    }
    @media (max-width: 575.98px) {}
    @media (max-width: 767.98px) {}
    @media (max-width: 991.98px) {
        .re-records-content {
            width: 100%;
            height: 100%;
        }
        .re-records-content-form {
            width: 90%;
            margin: 0 auto;
        }
    }
    @media (max-width: 1199.98px) {}
    @media (max-width: 1399.98px) {}
</style>
<section class="re-records-content pt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form action="/customers/save" method="post" class="row g-3 needs-validation" novalidate>
                    <div class="col-md-4">
                        <label for="fullname" class="form-label">Nome</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="fullname" id="fullname" required pattern="[a-zA-Z\s]+$">
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe um nome válido.</div>
                    </div>
                    <div class="col-md-4">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="cpf" id="cpf" required pattern="\d{3}\.\d{3}\.\d{3}-\d{2}">
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Digite o CPF no formato 000.000.000-00</div>
                    </div>
                    
                    <div class="col-md-4">
                        <label for="apartment" class="form-label">Apartamento</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="apartment" id="apartment" required pattern="[0-9]+$">
                        <div class="valid-feedback" >Muito bem!</div>
                        <div class="invalid-feedback">Digite o número do apartamento válido.</div>
                    </div>
                    <div class="col-md-5">
                        <label for="fone" class="form-label">Telefone</label>
                        <input type="tel" class="form-control form-control-lg rounded-0" name="fone" id="fone" required pattern="(\([0-9]{2}\))\s([9]{1})?([0-9]{4})-([0-9]{4})">
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Número de telefone precisa ser no formato (99) 9999-9999</div>
                    </div>
                    <div class="col-md-5">
                        <label for="birthday" class="form-label">Data de Nascimento</label>
                        <input type="date" class="form-control form-control-lg rounded-0" name="birthday" id="birthday" required pattern=“[0-9]{2}\/[0-9]{2}\/[0-9]{4}$”>
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe sua data de nascimento.</div>
                    </div>
                    <div class="col-md-2">
                        <label for="box" class="form-label">Código</label>
                        <input type="text" class="form-control form-control-lg rounded-0" value="<%=codeRandom(1000,8000)%>" name="code">
                    </div>
                    <div class="col-md-3">
                        <label for="brand" class="form-label">Marca</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="brand" id="brand" required pattern="[a-zA-Z\s]+$">
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe a marca do veículo.</div>
                    </div>
                    <div class="col-md-3">
                        <label for="model" class="form-label">Modelo</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="model" id="model" required>
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe o modelo do veículo.</div>
                    </div>
                    <div class="col-md-3">
                        <label for="board" class="form-label">Placa</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="board" id="board" required>
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe a placa do veículo.</div>
                    </div>
                    <div class="col-md-3">
                        <label for="year" class="form-label">Ano</label>
                        <input type="text" class="form-control form-control-lg rounded-0" name="year" id="year" required pattern="[0-9]+$">
                        <div class="valid-feedback">Muito bem!</div>
                        <div class="invalid-feedback">Informe o ano do veículo.</div>
                    </div>
                    
                    <div class="col-12">
                        <button type="submit" class="btn btn-lg re-btn rounded-0">Cadastrar</button>
                        <a href="/customers" class="btn btn-lg re-btn rounded-0">Lista de clientes</a>
                    </div>
                </form>
            </div>
        </div>
        <% if(message){ %>
            <div class="alert re-alert alert-dismissible fade show mt-3" role="alert">
                <%=message%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %> 
    </div>
</section>
<script></script>